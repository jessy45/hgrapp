{% include "extension/sidebar.html.twig" %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>AFFECTER UN AGENT</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                        <li class="breadcrumb-item active">Affecter un agent</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- /.col -->
            <div class="container-fluid">

                <div class="tab-content" id="custom-content-below-tabContent">
                    <div class="tab-pane fade show active" id="custom-content-below-home" role="tabpanel" aria-labelledby="custom-content-below-home-tab">
                        <!-- FORMULAIRE DE CONSULTATION -->
                        <div class="card card-default">
                            <div class="card-header">
                                <h3 class="card-title">INFORMATION DE L'AGENT</h3>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i></button>
                                    <!--              <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>-->
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_start(formPersonnel) }}
                                                {{ form_row(formPersonnel.nomComplet, {'attr':{'placeholder':'Nom Complet', 'class':'form-control'}}) }}
                                                {{ form_row(formPersonnel.dateNaissance, {'attr':{'class':'form-control'}}) }}
                                                {{ form_row(formPersonnel.lieuNaissance, {'attr':{'placeholder':'Lieu de Naissance','class':'form-control'}}) }}
                                                {{ form_row(formPersonnel.dateEngagement, {'attr':{'class':'form-control'}}) }}
                                                {{ form_row(formPersonnel.salaire, {'attr':{'placeholder':'Salaire','class':'form-control'}}) }}
                                        </div>
                                    </div>
                                    <!-- /.col -->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            {{ form_row(formPersonnel.acteNomination, {'attr':{'placeholder':'Acte de nomination','class':'form-control'}}) }}
                                            {{ form_row(formPersonnel.fonction, {'attr':{'placeholder':'Acte de nomination','class':'form-control'}}) }}
                                            {{ form_row(formPersonnel.grade, {'attr':{'placeholder':'Acte de nomination','class':'form-control'}}) }}
                                            {{ form_row(formPersonnel.niveauEtude, {'attr':{'placeholder':'Acte de nomination','class':'form-control'}}) }}
                                            {{ form_row(formPersonnel.dapartement, {'attr':{'placeholder':'Acte de nomination','class':'form-control'}}) }}

                                        </div>
                                    </div>
                                    {{ form_end(formPersonnel) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

    <a id="back-to-top" href="#" class="btn btn-primary back-to-top" role="button" aria-label="Scroll to top">
        <i class="fas fa-chevron-up"></i>
    </a>
</div>
<!-- /.content-wrapper -->
